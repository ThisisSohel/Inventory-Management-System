<h2 style="text-align:center">IMS Supplier List</h2>

<body style="font-family: Arial">

    @if (TempData["AlertMessage"] != null)
    {
        <div class=" alert alert-success">
            <strong>Success !</strong>  @TempData["AlertMessage"]
        </div>
    }
</body>

@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })

<table id="datatable" class=" table table-striped table-bordered">
    <thead>
        <tr>
            <th>Supplier ID</th>
            <th>Supplier Name</th>
            <th>Supplier Number</th>
            <th>EmailAddress</th>
            <th>SupplierAddress</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Id</td>
            <td>SupplierName</td>
            <td>SupplierNumber</td>
            <td>EmailAddress</td>
            <td>SupplierAddress</td>

        </tr>
    </tbody>
</table>

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/2.0.5/css/dataTables.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />


@section scripts{

    <script src="//cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.js"></script>

    <script>
        $(document).ready(function () {
            $("#datatable").DataTable(
                {
                    ajax: {
                        url: "/Supplier/DataTableView",
                        type: 'POST',
                        prosessing: true
                    },
                    "columns": [
                        { "data": "Id", "name": "Id" },
                        { "data": "SupplierName", "name": "SupplierName" },
                        { "data": "SupplierNumber", "name": "SupplierNumber" },
                        { "data": "EmailAddress", "name": "EmailAddress" },
                        { "data": "SupplierAddress", "name": "SupplierAddress" },
                        {
                            "data": "Id", "render": function (data) {
                                return ` <a> <button type = "submit" class="btn btn-primary btn-sm" onclick = "window.location.href='/Supplier/Update/${data}'">
                                        <i class="fas fa-pencil-alt">
                                        </i>Update</button></a>
                                        <a> <button type = "submit" class="btn btn-danger btn-sm" onclick = "window.location.href='/Supplier/Delete/${data}'">
                                        <i class="fas fa-pencil-alt">
                                        </i>Delete</button></a>
                                        <a> <button type = "submit" class="btn btn-info btn-sm" onclick = "window.location.href='/Supplier/Details/${data}'">
                                        <i class="fas fa-pencil-alt">
                                        </i>Details</button></a>`
                            }
                        },
                    ]
                });
        });
    </script>
}






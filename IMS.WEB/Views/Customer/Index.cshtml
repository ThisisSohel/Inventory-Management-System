<h2 style="text-align:center">IMS Customer List</h2>

<body style="font-family: Arial">

    @if (TempData["AlertMessage"] != null)
    {
        <div class=" alert alert-success">
            <strong>Success !</strong>  @TempData["AlertMessage"]
        </div>
    }
</body>

@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })

<table id="datatable" class=" table table-striped table-bordered">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Number</th>
            <th>EmailAddress</th>
            <th>CustomerAddress</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Id</td>
            <td>CustomerName</td>
            <td>CustomerNumber</td>
            <td>EmailAddress</td>
            <td>CustomerAddress</td>

        </tr>
    </tbody>
</table>

@*<script src="~/Scripts/jquery-3.4.1.js"></script>*@
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/2.0.5/css/dataTables.dataTables.min.css" />

@*using Bootstrap-5*@
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />


@section scripts{
    <script src="//cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.js"></script>


    @*<script src="//cdn.datatables.net/plug-ins/2.0.5/dataRender/datetime.js"></script>*@


    <script>
        $(document).ready(function () {
            $("#datatable").DataTable(
                {
                    ajax: {
                        url: "/Customer/DataTableView"
                    },
                    "columns": [
                        { "data": "Id", "name": "Id" },
                        { "data": "CustomerName", "name": "CustomerName" },
                        { "data": "CustomerNumber", "name": "CustomerNumber" },
                        { "data": "EmailAddress", "name": "EmailAddress" },
                        { "data": "CustomerAddress", "name": "CustomerAddress" },  
                        {
                            "data": "Id", "render": function (data) {
                                return ` <a> <button type = "submit" class="btn btn-primary btn-sm" onclick = "window.location.href='/Customer/Update/${data}'">
                                        <i class="fas fa-pencil-alt">
                                        </i>Update</button></a>
                                        <a> <button type = "submit" class="btn btn-danger btn-sm" onclick = "window.location.href='/Customer/Delete/${data}'">
                                        <i class="fas fa-pencil-alt">
                                        </i>Delete</button></a>
                                        <a> <button type = "submit" class="btn btn-info btn-sm" onclick = "window.location.href='/Customer/Details/${data}'">
                                        <i class="fas fa-pencil-alt">
                                        </i>Details</button></a>`
                            }
                        },
                    ]
                });
        });
    </script>
}



@model IMS.Entity.Entities.Customer
@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<h2>Create a new customer to your customer list!</h2>

<div class="border">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-lable" })
            @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control", placeholder = "enter your name" })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerNumber, htmlAttributes: new { @class = "control-lable" })
            @Html.TextBoxFor(model => model.CustomerNumber, new { @class = "form-control", placeholder = "Enter phone number" })
            @Html.ValidationMessageFor(model => model.CustomerNumber, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-lable" })
            @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", placeholder = "Enter email->name@example.com"})
            @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerAddress, htmlAttributes: new { @class = "control-lable" })
            @Html.TextBoxFor(model => model.CustomerAddress, new { @class = "form-control", placeholder = "Enter your address" })
            @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
        </div>

        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        if (Model != null)
        {
            <script type="text/javascript">
            $(function () {
                alert("Your Brand : " + @Model.CustomerName + "is added");
            });
            </script>
        }
    }
</div>


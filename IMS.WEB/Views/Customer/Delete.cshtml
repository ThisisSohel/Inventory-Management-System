@model IMS.Entity.Entities.Customer
@{
    ViewBag.Title = "Delete";
}

<h2>Delete the Customer</h2>

<h3> Are you sure you want to delete this customer?</h3>

<div>
    <h4> Brand</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => Model.CustomerName)

        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.EmailAddress)

        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerAddress)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to the list", "Index", null, new { @class = "btn btn-default" })
        </div>

    }
</div>

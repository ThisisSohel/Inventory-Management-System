@*Create New  Modal*@
<div class="modal fade" id="createModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #1d4552">
                <h1 class="modal-title fs-5 w-100 text-center" style="color: white">Create New Customer</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color: darkgray">
                <div class="container my-3 p-2 text-center">
                    <div class="row mb-6 ps-lg-5">
                        <label for="CustomerName" class="col-form-label text-start" style="color:black;">Name</label>
                        <div class="col-sm-6 pb-2">
                            <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="Enter customer name" style="background-color:#f5f5f5">
                        </div>
                        <label for="CustomerNumber" class=" col-form-label text-start" style="color:black;">Number</label>
                        <div class="col-md-6 pb-2">
                            <input type="text" class="form-control" id="CustomerNumber" name="CustomerNumber" placeholder="Enter customer number" style="background-color:#f5f5f5">
                        </div>
                        <label for="EmailAddress" class=" col-form-label text-start" style="color:black;">Email</label>
                        <div class="col-md-6 pb-2">
                            <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" placeholder="Enter customer email" style="background-color:#f5f5f5">
                        </div>
                        <label for="CustomerAddress" class=" col-form-label text-start" style="color:black;">Address</label>
                        <div class="col-md-6 pb-2">
                            <input type="text" class="form-control" id="CustomerAddress" name="CustomerAddress" placeholder="Enter customer address" style="background-color:#f5f5f5">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <input type="submit" id="submitId" class="btn btn-primary" value="Create" style="background-color: #1d4552">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="background-color: #1d4552; ">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color:#a9a9a9">Close</button>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="//cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.js"></script>

    <script>

        function showErrorAlertMessage(message) {
            return `
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p> ${message} </p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>`
        }

        function showSuccessAlertMessage(message) {
            return `
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <p> ${message} </p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>`
        }

        function createNewFun() {
            $("#createModal").modal('show')
        }

        function DataBinding() {
            const name = $("#CustomerName").val();
            const number = $("#CustomerNumber").val();
            const email = $("#EmailAddress").val();
            const address = $("#CustomerAddress").val();

            const obj = {
                CustomerName: name,
                CustomerNumber: number,
                EmailAddress: email,
                CustomerAddress: address
            }
            return obj;
        }

        function submitData(obj) {
            $.ajax({
                url: "/Customer/Create",
                method: "POST",
                data: obj,
                dataType: 'json',
                success: function (response) {
                    if (response.IsValid == true) {
                        const msgAlertMake = showSuccessAlertMessage(response.Message);
                        $("#successMessageShow").html(msgAlertMake);
                        $("#createModal").modal('hide');

                        //Reload the DataTable after added a new brand.
                        const table = $("#brandInfoTable").DataTable();
                        table.ajax.reload();

                    } else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#createModal").modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#createModal").modal('hide');
                }
            });
        }

        function Details(id) {
            $("#detailsModal").modal('show')
            $.ajax({
                url: "/Customer/Details",
                type: 'GET',
                data: { id: id },
                dataType: 'json',
                success: function (response) {
                    if (response.IsSuccess == true) {
                        $("#detailsBodyId").empty();
                        const trMake = `
                                        <tr>
                                            <td>${response.Details.CreatedBy}</td>
                                            <td>${response.Details.CreatedDate}</td>
                                            <td>${response.Details.ModifyBy}</td>
                                            <td>${response.Details.ModifyDate}</td>
                                        </tr>
                                    `;
                        $("#detailsBodyId").append(trMake);
                        $('#detailsModal').modal('show');
                    }
                    else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $('#detailsModal').modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $('#detailsModal').modal('hide');
                }
            });
        }


        function Delete(id) {
            $("#deleteModal").modal("show");

            $("#btnDelete").click(function () {
                $.ajax({
                    url: "/Customer/Delete",
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        console.log(response);
                        if (response.IsSuccess == true) {
                            $("#deleteModal").modal('hide');
                            const msgAlertMake = showSuccessAlertMessage(response.Message);
                            $("#successMessageShow").html(msgAlertMake);
                            $("#deleteModal").modal('hide');
                        } else {
                            const msgAlertMake = showErrorAlertMessage(response.Message);
                            $("#errorMessageShow").html(msgAlertMake);
                            $("#deleteModal").modal('hide');
                        }
                    },
                    error: function (error) {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#deleteBrandModal").modal('hide');
                    }

                })
            })

        }


        function Update(updateId) {
            $("#updateModal").modal('show');

            $.ajax({
                url: "/Customer/Update",
                dataType: 'json',
                type: 'GET',
                data: { id: updateId },
                success: function (response) {
                    console.log(response)
                    if (response.IsSuccess) {
                        $("#updateId").val(response.UpdateCustomerData.Id);
                        $("#updateCustomerName").val(response.UpdateCustomerData.CustomerName);
                        $("#updateCustomerNumber").val(response.UpdateCustomerData.CustomerNumber);
                        $("#updateEmailAddress").val(response.UpdateCustomerData.EmailAddress);
                        $("#updateCustomerAddress").val(response.UpdateCustomerData.CustomerAddress);
                        $("#updateModal").modal('show');
                    }
                    else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#updateModal").modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#updateModal").modal('hide');
                }
            });

            $("#updateSaveId").click(function () {

                const id = $("#updateId").val();
                const cutomerName = $("#updateCustomerName").val();
                const cutomerNumber = $("#updateCustomerNumber").val();
                const email = $("#updateEmailAddress").val();
                const address = $("#updateCustomerAddress").val();

                var formdata = {
                    Id: id,
                    CustomerName: cutomerName,
                    CustomerNumber: cutomerNumber,
                    EmailAddress: email,
                    CustomerAddress: address
                }

                $.ajax({
                    url: "/Customer/Update",
                    dataType: 'json',
                    type: 'POST',
                    data: { id: formdata.Id, customerViewModel: formdata },
                    success: function (response) {
                        if (response.IsSuccess == true) {
                            const msgAlertMake = showSuccessAlertMessage(response.Message);
                            $("#successMessageShow").html(msgAlertMake);
                            $("#updateModal").modal('hide');
                        } else {
                            const msgAlertMake = showErrorAlertMessage(response.Message);
                            $("#errorMessageShow").html(msgAlertMake);
                            $("#updateModal").modal('hide');
                        }
                    },
                    error: function (error) {
                        const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#updateModal").modal('hide');
                    }
                });
            });
        }

        $(document).ready(function () {

            $.ajax({
                url: "/Customer/LoadCustomerData",
                datatype: 'json',
                type: 'GET',
                success: function (response) {
                    if (response.IsValid == true) {
                        $("#InfoTable").DataTable(
                            {
                                data: response.CustomerList,
                                'scrollY': 200,
                                "columns": [
                                    { "data": "Id", name: "Id" },
                                    { "data": "CustomerName", "name": "CustomerName" },
                                    { "data": "CustomerNumber", "name": "CustomerNumber" },
                                    { "data": "EmailAddress", "name": "EmailAddress" },
                                    { "data": "CustomerAddress", "name": "CustomerAddress" },
                                    {
                                        "data": "Id", "render": function (cusId) {
                                            return `
                                                    <a> <button type = "submit" class="btn btn-outline-dark btn-sm" onClick = "Details(${cusId})">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>Details</button></a>
                                                    <a> <button type = "submit" class="btn btn-outline-danger btn-sm" onClick = "Delete(${cusId})">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>Delete</button></a>
                                                    <a> <button type = "submit" class="btn btn-outline-secondary btn-sm" onClick = "Update(${cusId})">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>Update</button></a>

                                                    `
                                        }
                                    },
                                ]
                            })

                    } else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                    }
                },
                error: function (err) {
                    const msgAlertMake = showErrorAlertMessage(err + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                }
            });

            $("#submitId").click(function () {

                var formData = DataBinding();
                submitData(formData);

            });
        })


    </script>
}


@*DataTable and Bootstrap CDN*@
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

<style>
    body {
        background-color: white;
        font-family: Arial;
    }
</style>

@*DataTable View*@
<div class="row" style="padding: 3%; border:1px solid">
    <div id="errorMessageShow">
        <p></p>
    </div>

    <div id="successMessageShow">
        <p></p>
    </div>

    <div class="container my-3 p-2 text-center" style="background-color: #91c0e3">
        <h2>List of Product Types</h2>
    </div>

    <a href="#" class="btn btn-dark col-sm-2 mb-2" onclick="createNewFun()">Add New</a>

    <div style="border:1px solid black; padding:10px; width: 1300px; text-align:center" class="col-lg-4">
        <table id="InfoTable" class="cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Type Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


@* Create New Modal *@
<div class="modal fade" id="createModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #1d4552">
                <h1 class="modal-title fs-5 w-100 text-center" style="color: white">Create New Product Type</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color: darkgray">
                <div class="container my-3 p-2 text-center">
                    <div class="row mb-3">
                        <label for="TypeName" class="col-sm-3 col-form-label text-start" style="color:black;">Type Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="TypeName" name="TypeName" placeholder="Enter the type" style="background-color:#f5f5f5">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="CategoryDropdown" class="col-sm-3 col-form-label text-start" style="color:black;">Category</label>
                        <div class="col-sm-9">
                            <select class="form-select category_dropdown_name" id="CategoryDropdown" name="CategoryId" style="background-color: #f5f5f5">
                                <option selected disabled>Choose a Category</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <input type="button" id="submitId" class="btn btn-primary" value="Create" style="background-color: #1d4552">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="background-color: #1d4552;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color:#a9a9a9">Close</button>
            </div>
        </div>
    </div>
</div>



@* Details Modal*@
<div class="modal fade" id="detailsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #1d4552">
                <h1 class="modal-title fs-5 w-100 text-center" style="color: white">--Details about the product type--</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color: darkgray">
                <div class="container my-3 p-2 text-center">
                    <table class="table">
                        <thead>
                            <tr style="color:black;">
                                <th>CreatedBy</th>
                                <th>CreatedAt</th>
                                <th>ModifyBy</th>
                                <th>ModifyAt</th>
                            </tr>
                        </thead>
                        <tbody id="detailsBodyId">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer" style="background-color: #1d4552;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color:#a9a9a9">Close</button>
            </div>
        </div>
    </div>
</div>


@*Delete Modal*@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #1d4552">
                <h5 class="modal-title w-100 text-center" style="color: white">Confirm...</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color: darkgray">
                <h4>Are you sure to delete the SKU - <span id="nameId"></span>?</h4>
                <input type="hidden" value="" id="Id" />
            </div>
            <div class="modal-footer" style="background-color: #1d4552">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="background-color:#a9a9a9">Close</button>
                <button type="button" id="btnDelete" class="btn btn-outline-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


@*Update  Modal*@
<div class="modal fade" id="updateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #1d4552">
                <h1 class="modal-title fs-5 w-100 text-center" style="color: white">Update SKU</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color: darkgray">
                <div class="container my-3 p-2 text-center">
                    <div class="row mb-3">
                        <label for="CategoryName" class="col-sm-3 col-form-label text-start" style="color:black;">Type Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="updateNameId" name="TypeName" style="background-color:#f5f5f5">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="CategoryDropdown" class="col-sm-3 col-form-label text-start" style="color:black;">Category</label>

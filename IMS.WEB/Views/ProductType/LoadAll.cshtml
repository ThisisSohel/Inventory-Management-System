@section scripts{
    <script src="//cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.js"></script>

    <script>

        function showErrorAlertMessage(message) {
            return `
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <p> ${message} </p>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>`
        }

        function showSuccessAlertMessage(message) {
            return `
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <p> ${message} </p>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>`
        }

        function loadCategories() {
            $.ajax({
                url: "/Category/LoadCategoryData", 
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    console.log(response)
                    if (response.data.length == 0) {
                        $("#createModal").modal('hide');
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                    }
                    else {
                        var dropdown = $('.category_dropdown_name');
                        dropdown.empty();
                        dropdown.append('<option selected disabled>Choose a Category</option>');

                        $.each(response.data, function (index, category) {
                            var newDropDownData = `
                           <option value = ${category.Id}>${category.CategoryName}</option>
                        `
                            dropdown.append(newDropDownData);
                        });
                    }

                },
                error: function (error) {
                    $("#createModal").modal('hide');
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#createModal").modal('hide');
                }
            });
        }

        function createNewFun() {
            $("#createModal").modal('show')
            loadCategories();
        }

        function DataBinding() {

            //categoryList = [];
            const name = $("#TypeName").val();
            const category = $("#CategoryDropdown").find(":selected").val();

            //categoryList.push({
            //    CategoryName: category
            //});

            const obj = {
                TypeName: name,
                CategoryId: category
            }
            return obj;
        }

        function submitData(obj) {
            $.ajax({
                url: "/ProductType/Create",
                method: "POST",
                data: obj,
                dataType: 'json',
                success: function (response) {
                    if (response.IsValid == true) {
                        const msgAlertMake = showSuccessAlertMessage(response.Message);
                        $("#successMessageShow").html(msgAlertMake);
                        $("#createModal").modal('hide');
                        DataTableLoad();

                    } else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#createModal").modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#createModal").modal('hide');
                }
            });
        }

        function Details(id) {
            $("#detailsModal").modal('show')
            $.ajax({
                url: "/ProductType/DetailsAsync",
                type: 'GET',
                data: { id: id },
                dataType: 'json',
                success: function (response) {
                    if (response.IsSuccess == true) {
                        $("#detailsBodyId").empty();
                        const trMake = `
                                                        <tr>
                                                            <td>${response.Details.CreatedBy}</td>
                                                            <td>${response.Details.CreatedDate}</td>
                                                            <td>${response.Details.ModifyBy}</td>
                                                            <td>${response.Details.ModifyDate}</td>
                                                        </tr>
                                                    `;
                        $("#detailsBodyId").append(trMake);
                        $('#detailsModal').modal('show');
                    }
                    else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $('#detailsModal').modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $('#detailsModal').modal('hide');
                }
            });
        }

        function Delete(id) {
            $("#deleteModal").modal("show");

            $("#btnDelete").click(function () {
                $.ajax({
                    url: "/Category/DeleteAsync",
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        console.log(response);
                        if (response.IsSuccess == true) {

                            $("#deleteModal").modal('hide');
                            const msgAlertMake = showSuccessAlertMessage(response.Message);
                            $("#successMessageShow").html(msgAlertMake);
                            $("#deleteModal").modal('hide');

                            const table = $("#InfoTable").DataTable();
                            table.ajax.reload();
                        } else {
                            const msgAlertMake = showErrorAlertMessage(response.Message);
                            $("#errorMessageShow").html(msgAlertMake);
                            $("#deleteModal").modal('hide');
                        }
                    },
                    error: function (error) {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#deleteBrandModal").modal('hide');
                    }

                })
            })

        }



        function Update(updateId) {
            $("#updateModal").modal('show');

            $.ajax({
                url: "/ProductType/UpdateAsync",
                dataType: 'json',
                type: 'GET',
                data: { id: updateId },
                success: function (response) {
                    if (response.IsSuccess == true) {
                        $("#updateId").val(response.UpdateProductTypeData.Id);
                        $("#updateNameId").val(response.UpdateProductTypeData.TypeName);
                        loadCategories();
                        $("#updateModal").modal('show');
                    }
                    else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#updateModal").modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#updateModal").modal('hide');
                }
            });

            $("#updateSaveId").click(function () {

                const id = $("#updateId").val();
                const name = $("#updateNameId").val();
                const category = $("#CategoryDropdown").find(":selected").val();

                var formdata = {
                    Id: id,
                    TypeName: name,
                    CategoryId: category
                }

                $.ajax({
                    url: "/ProductType/UpdateAsync",
                    dataType: 'json',
                    type: 'POST',
                    data: { id: formdata.Id, productCategoryViewModel: formdata },
                    success: function (response) {
                        if (response.IsSuccess == true) {
                            const msgAlertMake = showSuccessAlertMessage(response.Message);

                            $("#successMessageShow").html(msgAlertMake);
                            $("#updateModal").modal('hide');

                            const table = $("#InfoTable").DataTable();
                            table.ajax.reload();
                        } else {
                            const msgAlertMake = showErrorAlertMessage(response.Message);
                            $("#errorMessageShow").html(msgAlertMake);

                            $("#updateModal").modal('hide');
                        }
                    },
                    error: function (error) {
                        const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#updateModal").modal('hide');
                    }
                });
            });
        }


        $(document).ready(function () {


            DataTableLoad();


            $("#submitId").click(function () {

                var formData = DataBinding();
                submitData(formData);

            });
        })

        function DataTableLoad() {
            $("#InfoTable").DataTable(
                {
                    "processing": true,
                    "serverSide": true,
                    "bDestroy": true,
                    "ajax": {
                        "url": "/ProductType/LoadTypeData",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "TypeName", "name": "CategoryName" },
                        {
                            "data": "Id", "render": function (id) {
                                return `
                                                        <a> <button type = "submit" class="btn btn-outline-dark btn-sm" onClick = "Details(${id})">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>Details</button></a>
                                                        <a> <button type = "submit" class="btn btn-outline-danger btn-sm" onClick = "Delete(${id})">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>Delete</button></a>
                                                        <a> <button type = "submit" class="btn btn-outline-secondary btn-sm" onClick = "Update(${id})">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>Update</button></a>

                                                        `
                            }
                        },
                    ]
                });
        }

    </script>
}

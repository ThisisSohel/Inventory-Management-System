@model IMS.Entity.Entities.ProductType
@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<h2>Create Your New Product Type</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-lable" })
        @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control", placeholder = "enter the type name" })
        @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    if (Model != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("Your Brand : " + @Model.TypeName + "is added");
            });
        </script>
    }
}
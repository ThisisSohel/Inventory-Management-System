@section scripts{
    <script src="//cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.js"></script>

    <script>

        function showErrorAlertMessage(message) {
            return `
                                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                                        <p> ${message} </p>
                                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                    </div>`
        }

        function showSuccessAlertMessage(message) {
            return `
                                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                                        <p> ${message} </p>
                                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                    </div>`
        }

        $('#createModal').on('hidden.bs.modal', function () {
            $(this).find('input[type="text"]').val('');
            $(this).find('.name_validation').text('');
            $(this).find('.category_validation').text('');
        });

        function loadCategories() {
            $.ajax({
                url: "/Category/LoadCategoryData",
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    console.log(response)
                    if (response.data.length == 0) {
                        $("#createModal").modal('hide');
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                    }
                    else {
                        var dropdown = $('.category_dropdown_name');
                        dropdown.empty();
                        dropdown.append('<option selected disabled value="">Choose a Category</option>');

                        $.each(response.data, function (index, category) {
                            var newDropDownData = `
                                       <option value = ${category.Id}>${category.CategoryName}</option>
                                    `
                            dropdown.append(newDropDownData);
                        });
                    }

                },
                error: function (error) {
                    $("#createModal").modal('hide');
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#createModal").modal('hide');
                }
            });
        }

        function createNewFun() {
            $("#createModal").modal('show')
            loadCategories();
        }

        function nameValidator(name) {

            const regex = new RegExp("^[a-zA-Z ]+$");
            isValid = true;

            if (name.trim().length == 0) {
                $(".name_validation").text("Name can not be empty!");
                isValid = false;
            } else if (!regex.test(name)) {
                $(".name_validation").text("Name contains only alphabetic characters!");
                isValid = false;
            } else if (name.trim().length > 30 || name.trim().length < 3) {
                $(".name_validation").text("Length should be in between 3 to 30!");
                isValid = false;
            } else {
                $(".name_validation").text("");
            }

            return isValid;
        }

        function categoryValidator(id) {

            isValid = true;

            if (id == "") {
                $(".category_validation").text("Please select a product type!");
                isValid = false;
            } else {
                $(".category_validation").text("");
            }

            return isValid;
        }

        //$(".name").on('change input propertychange', function () {
        //    const name = $(this).val();
        //    nameValidator(name);
        //});

        function DataBinding() {

            const name = $("#TypeName").val();
            const categoryId = $(".category_dropdown_name").find(":selected").val();

            const isNameValid = nameValidator(name);
            const isTypeValid = categoryValidator(categoryId);

            if (isNameValid && isTypeValid) {
                const obj = {
                    TypeName: name,
                    CategoryId: categoryId
                }
                submitData(obj);
            }
        }

        function submitData(obj) {
            $.ajax({
                url: "/ProductType/Create",
                method: "POST",
                data: obj,
                dataType: 'json',
                success: function (response) {
                    if (response.IsValid == true) {
                        const msgAlertMake = showSuccessAlertMessage(response.Message);
                        $("#successMessageShow").html(msgAlertMake);
                        $("#createModal").modal('hide');
                        DataTableLoad();

                    } else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#createModal").modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#createModal").modal('hide');
                }
            });
        }

        function Details(id) {
            $("#detailsModal").modal('show')
            $.ajax({
                url: "/ProductType/DetailsAsync",
                type: 'GET',
                data: { id: id },
                dataType: 'json',
                success: function (response) {
                    if (response.IsSuccess == true) {
                        $("#detailsBodyId").empty();
                        const trMake = `
                                                                    <tr>
                                                                        <td>${response.Details.CreatedBy}</td>
                                                                        <td>${response.Details.CreatedDate}</td>
                                                                        <td>${response.Details.ModifyBy}</td>
                                                                        <td>${response.Details.ModifyDate}</td>
                                                                    </tr>
                                                                `;
                        $("#detailsBodyId").append(trMake);
                        $('#detailsModal').modal('show');
                    }
                    else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $('#detailsModal').modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $('#detailsModal').modal('hide');
                }
            });
        }

        function Delete(id) {
            $("#deleteModal").modal("show");

            $("#btnDelete").click(function () {
                $.ajax({
                    url: "/ProductType/DeleteAsync",
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.IsSuccess == true) {

                            $("#deleteModal").modal('hide');
                            const msgAlertMake = showSuccessAlertMessage(response.Message);
                            $("#successMessageShow").html(msgAlertMake);
                            $("#deleteModal").modal('hide');

                            DataTableLoad();
                        } else {
                            const msgAlertMake = showErrorAlertMessage(response.Message);
                            $("#errorMessageShow").html(msgAlertMake);
                            $("#deleteModal").modal('hide');
                        }
                    },
                    error: function (error) {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#deleteBrandModal").modal('hide');
                    }

                })
            })

        }

        function updateModalValidationMessageReset() {
            $(".name_validation").empty();
            $(".category_validation").empty();
        }

        function Update(updateId) {
            $("#updateModal").modal('show');

            $.ajax({
                url: "/ProductType/UpdateAsync",
                dataType: 'json',
                type: 'GET',
                data: { id: updateId },
                success: function (response) {
                    updateModalValidationMessageReset();
                    if (response.IsSuccess == true) {
                        $("#updateId").val(response.UpdateProductTypeData.Id);
                        $("#updateNameId").val(response.UpdateProductTypeData.TypeName);
                        loadCategories();
                        $("#updateModal").modal('show');
                    }
                    else {
                        const msgAlertMake = showErrorAlertMessage(response.Message);
                        $("#errorMessageShow").html(msgAlertMake);
                        $("#updateModal").modal('hide');
                    }
                },
                error: function (error) {
                    const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                    $("#errorMessageShow").html(msgAlertMake);
                    $("#updateModal").modal('hide');
                }
            });

            $("#updateSaveId").click(function () {

                const id = $("#updateId").val();
                const name = $("#updateNameId").val();
                const categoryId = $(".selected").find(":selected").val();

                const isNameValid = nameValidator(name);
                const isTypeValid = categoryValidator(categoryId);

                if (isNameValid && isTypeValid) {
                    const formdata = {
                        Id: id,
                        TypeName: name,
                        CategoryId: categoryId
                    }

                    $.ajax({
                        url: "/ProductType/UpdateAsync",
                        dataType: 'json',
                        type: 'POST',
                        data: { id: formdata.Id, productTypeUpdateViewModel: formdata },
                        success: function (response) {
                            if (response.IsSuccess == true) {
                                const msgAlertMake = showSuccessAlertMessage(response.Message);

                                $("#successMessageShow").html(msgAlertMake);
                                $("#updateModal").modal('hide');

                                DataTableLoad();
                            } else {
                                const msgAlertMake = showErrorAlertMessage(response.Message);
                                $("#errorMessageShow").html(msgAlertMake);
                                $("#updateModal").modal('hide');
                            }
                        },
                        error: function (error) {
                            const msgAlertMake = showErrorAlertMessage(error.status + " Error!");
                            $("#errorMessageShow").html(msgAlertMake);
                            $("#updateModal").modal('hide');
                        }
                    });
                }

            });
        }


        $(document).ready(function () {


            DataTableLoad();


            $("#submitId").click(function () {
                DataBinding();
            });
        })

        function DataTableLoad() {
            $("#InfoTable").DataTable(
                {
                    "processing": true,
                    "serverSide": true,
                    "bDestroy": true,
                    "ajax": {
                        "url": "",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
						{ "data": "ProductImage", "name": "ProductImage" },
                        { "data": "ProductName", "name": "ProductName" },
                        { "data": "Quantity", "name": "Quantity" },
                        { "data": "Price", "name": "Price" },
						{ "data": "Description", "name": "Description" },
						{ "data": "BrandId", "name": "BrandId" },
						{ "data": "CategoryId", "name": "CategoryId" },
                        {
                            "data": "Id", "render": function (id) {
                                return `
                                                                    <a> <button type = "submit" class="btn btn-outline-dark btn-sm" onClick = "Details(${id})">
                                                                    <i class="fas fa-pencil-alt">
                                                                    </i>Details</button></a>
                                                                    <a> <button type = "submit" class="btn btn-outline-danger btn-sm" onClick = "Delete(${id})">
                                                                    <i class="fas fa-pencil-alt">
                                                                    </i>Delete</button></a>
                                                                    <a> <button type = "submit" class="btn btn-outline-secondary btn-sm" onClick = "Update(${id})">
                                                                    <i class="fas fa-pencil-alt">
                                                                    </i>Update</button></a>

                                                                    `
                            }
                        },
                    ]
                });
        }

    </script>
}

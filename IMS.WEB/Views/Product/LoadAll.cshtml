@* Create New Modal *@
<div class="modal fade" id="createModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header" style="background-color: #1d4552">
                <h1 class="modal-title fs-5 w-100 text-center" style="color: white">Create New Product Type</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="p-4">
                <div class="row">
                    <div class="container my-3 p-5 text-center" style="border: 1px solid">

                        <div class="container my-3 p-2 text-center" style="background-color: #e9edf5">
                            <h2>Add basic information of product</h2>
                        </div>

                        <div class="col p-4" style="border: 1px solid">
                            <div class="row mb-3 align-items-center">
                                <div class="col-sm-3 text-start">
                                    <label for="ProductName" class="form-label fw-bold">Product Name:</label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control name" id="ProductName" name="ProductName" placeholder="Enter product name" style="background-color:#f5f5f5">
                                    <span class="text-danger text-center name_validation" id="name_validation"></span>
                                </div>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <div class="col-sm-3 text-start">
                                    <label for="Quantity" class="form-label fw-bold">Quantity:</label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control quantity" id="Quantity" name="Quantity" placeholder="Enter product quantity" style="background-color:#f5f5f5" min="0" step="1">
                                    <span class="text-danger text-center quantity_validation" id="name_validation"></span>
                                </div>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <div class="col-sm-3 text-start">
                                    <label for="Price" class="form-label fw-bold">Price:</label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control price" id="Price" name="Price" placeholder="Enter product price" style="background-color:#f5f5f5" min="0" step="0.01">
                                    <span class="text-danger text-center price_validation" id="name_validation"></span>
                                </div>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <div class="col-sm-3 text-start">
                                    <label for="Description" class="form-label fw-bold">Description:</label>
                                </div>
                                <div class="col-6">
                                    <textarea class="form-control description" id="Description" name="Description" placeholder="Enter product description" rows="3" style="background-color:#f5f5f5"></textarea>
                                    <span class="text-danger text-center description_validation" id="description_validation"></span>
                                </div>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <div class="col-sm-3 text-start">
                                    <label for="ProductImage" class="form-label fw-bold">Product Image:</label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="file" class="form-control" id="ProductImage" name="ProductImage" accept="image/*" style="background-color:#f5f5f5">
                                    <span class="text-danger text-center image_validation" id="image_validation"></span>
                                </div>
                            </div>
                        </div>

                        <div class="container my-3 p-2 text-center" style="background-color: #e9edf5">
                            <h2>Add additional information of product</h2>
                        </div>

                        <div class="col p-4" style="border: 1px solid">
                            <div class="row mb-5 align-items-center">
                                <div class="col-sm-3 text-start">
                                    <label for="brand_id" class="form-label fw-bold">Brand:</label>
                                </div>
                                <div class="col-sm-9">
                                    <select class="form-select brand_dropdown_name" id="brand_id" name="BrandId" style="background-color: #f5f5f5">
                                        <option selected disabled value="">Choose a Brand</option>
                                    </select>
                                    <span class="text-danger text-center brand_validation"></span>
                                </div>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <div class="col-sm-3 text-start">
                                    <label for="category_id" class="form-label fw-bold">Category:</label>
                                </div>
                                <div class="col-sm-9">
                                    <select class="form-select category_dropdown_name" id="category_id" name="CategoryId" style="background-color: #f5f5f5">
                                        <option selected disabled value="">Choose a Category</option>
                                    </select>
                                    <span class="text-danger text-center category_validation"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12 text-center justify-content-center">
                                <input type="submit" id="createId" class="btn btn-primary" value="Create" style="background-color: #1d4552">
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal-footer" style="background-color: #1d4552;">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal" style="background-color:#a9a9a9">Close</button>
            </div>
        </div>
    </div>
</div>



